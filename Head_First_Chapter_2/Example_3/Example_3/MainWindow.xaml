<Window x:Class="Example_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <CheckBox x:Name="enableCheckBox" Content="Enable label changing" Grid.Column="1" HorizontalAlignment="Left" Margin="54,78,0,0" VerticalAlignment="Top" Checked="checkBox_Checked"/>
        <Button x:Name="changeText" Content="Change the label if checked" HorizontalAlignment="Left" Margin="47,73,0,0" VerticalAlignment="Top" Width="162" Click="button_Click"/>
        <TextBlock x:Name="labelToChange" HorizontalAlignment="Left" Margin="89,58,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="71" Width="294"/>

    </Grid>
</Window>
